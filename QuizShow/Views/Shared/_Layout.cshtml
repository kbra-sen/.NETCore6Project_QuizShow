<script type="text/javascript">
    var saniye = 5;
    function sayac() {
        if (saniye > 0) {
            saniye = saniye - 1;
            $("#sure").html(saniye);
        }
        if (saniye == 0) {

            $("#sure").css("text-align", "center");

            $("#sure").html("Süre Bitti");
            $('#orta').css({ 'filter': 'blur(10px)' });
            $('#myModal').modal('show')

        }
    }
  
    function gameOver(){
        
        var Point = $("#Point").val();
         console.log(Point);
        $("#showPoint").html(Point+" puan ile oyunu tamamladınız.");
        
    }
    $(document).ready(function () {
        var State = $("#State").val();
        console.log(state);
        $("#sure").html("30");
        setInterval(sayac, 1000);
        if(State)
        {
            gameOver();
        }
    });


</script>